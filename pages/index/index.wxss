page {
  height: 100%;
}
.root {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.tabs {
  background-color: #222;
  color: #ccc;
  display: flex;
}
.tabs text {
  flex: 1;
  text-align: center;
  padding: 5px 0;
}
.tabs text.active {
  color: #fff;
  border-bottom: 2px solid #E9232C;
}
.content {
  flex: 1;
  height: 100%;
  background-color: #111214;
  overflow: scroll;
}
.content .lunbotu image {
  width: 100%;
  height: 220px;
}
.entrance {
  display: flex;
  margin-bottom: 5px;
}
.entrance .item {
  flex: 1;
  text-align: center;
}
.entrance .item image {
  display: block;
  width: 50px;
  height: 50px;
  margin: 5px auto;
}
.entrance .item text {    
  color: #fff;
}
.list .title {
  color: #fff;
  margin-left: 10px;
}
.list .inner {
  margin-top: 5px;
  display: flex;
  flex-wrap: wrap;
}
.list .inner .item {
  flex: 1;
  width: 33.333333333%;
}
.list .inner .item text {
  color: #fff;
}
.list .inner .item image {
  display: block;
  width: 120px;
  height: 120px;
  margin: 0 auto;
}
.player {
  display: flex;
  height: 50px;
  background-color: #17181A;
}
.player .poster image {
  width: 40px;
  height: 40px;
  padding: 5px;
}
.player .info {
  flex: 1;
  margin: 5px;
}
.player .info text {
  display: block;
  color: #fff;
}
.player .info .title {
  font-size: 16px;
}
.player .info .artist {
  font-size: 14px;
}
.controls image {
  width: 40px;
  height: 40px;
  margin: 5px 2px;
}
